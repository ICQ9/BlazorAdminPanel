@namespace AdminPanel.Pages.Components

<MudGrid AlignItems="Center" Class="mb-4">
    <MudItem xs="12" md="8">
        <MudText Typo="Typo.h4">@Title</MudText>
        @if (!string.IsNullOrEmpty(Subtitle))
        {
            <MudText Typo="Typo.body1" Color="Color.Secondary">@Subtitle</MudText>
        }
    </MudItem>
    <MudItem xs="12" md="4" Class="d-flex justify-end">
        <MudButton Variant="Variant.Text"
                   StartIcon="@Icons.Material.Filled.Help"
                   OnClick="ShowHelp">
            Help
        </MudButton>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Subtitle { get; set; }
    [Inject] ISnackbar Snackbar { get; set; }

    private void ShowHelp()
    {
        Snackbar.Add("Profile creation help coming soon!", Severity.Info);
    }
}